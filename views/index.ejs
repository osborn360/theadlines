<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.slim.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.1/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.1/axios.min.js"></script>

<script>
const world = document.querySelector("#world");
const sports = document.querySelector("#sports");
const tech = document.querySelector("#tech");
const entertainment = document.querySelector("#entertainment");

let wnews
let snews
let tnews
let enews 


const getData = async () => {
    await axios.get('/world')
    .then(res => {
        wnews = res.data;
	    Array.from(wnews).forEach(x => {  
            let showlx = document.createElement("div");
            showlx.innerHTML = `      
            <div class="card mb-3" style="" id="check">
                <img src="${x.urlToImage}" class="card-img-top" alt="" id="cimage"/>
                <div class="card-body">
                    <b><small>${x.publishedAt}</small></b>
                    <h5 class="card-title"><b>${x.title}</b></h5>
                    <p class="card-text">${x.description}....</p>
                    <a href="${x.url}" class="btn btn-primary" target="_blank"><strong>Read More</strong></a>
                </div>
            </div>
            </br>
            `
            world.appendChild(showlx);
            
    	})
    })
	.catch(err => console.error(err));


    await axios.get('/sports')
