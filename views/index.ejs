    <body class="container">
        <p>
            <p id="logo">Theadlines</p>
            <p class="text-uppercase text-muted" id="slogan">Daily news headlines</p>
        </p>

        </br>
        <ul class="nav nav-tabs justify-content-center">
           <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#xworld">World</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#xsports">Sports</a>
